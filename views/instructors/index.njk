{% extends "layout.njk" %}

{% block content_index %}


<section class="card table_container" >
  <table>
    <thead>

      <tr>
          <th>Instructors</th>
          <th>Atendimento</th>
          <th>Ação</th>
      </tr>

    </thead>

    <tbody>
    {% for instructor in instructors %}
      <tr>
        <td>
           <span style="background-image: url('/photo-profile.jpg')";>
           </span>
          {{instructor.name}} 
        </td>
        <td> {{instructor.services}} </td>
        
        <td> <a href="/instructors/{{instructor.id}} ">Ver</a></td>
      </tr>
    
    {% endfor %}
      
    </tbody>


  </table>

</section>

{% endblock %}