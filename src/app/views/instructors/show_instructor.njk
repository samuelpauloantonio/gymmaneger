{% extends "layout.njk" %}

{% block content_index %}
<section class="card">
    <div class="avatar"></div>
  <section class="details">

    <h3>Detalhes</h3>
     <div class="item">
          <div> Avatar URL</div>
          <div>
            <input  type="url" 
            name = "url_avatar" 
            placeholder="http://"
            value= "{{instructor.url_avatar}} "
            style='font-weight:bold; 
            color:rgb(85, 85, 85);
            font-size:18px'/>
            
         </div>
      </div>   
    <div class="item">
      <div>Instrutor</div>
      <div>{{instructor.name}} </div>
    </div>
    <div class="item">
      <div>Idade</div>
      <div>{{instructor.birth}}</div>
    </div>
    <div class="item">
      <div>Sexo</div>
      <div>
      
        {% if instructor.sex == 'M'   %}
            Masculino 
        {% endif %} 
        
        {% if instructor.sex == 'F'   %}
            Femenino
        {% endif %} 
       </div>
    </div>

    <div class="item">
      <div>Acompanhamento</div>
      <div>
        {% for  service in instructor.services %} 
          <span> {{ service }} </span>
          
        {% endfor %}
      </div>
    </div>
    
    <div class="item">
      <div>Desde</div>
      <div>{{instructor.date_now}} </div>
    </div>

    
  <a href="/instructors/{{instructor.id}}/edit " class="bt">Editar</a>
  </section>

</section>

{% endblock %}