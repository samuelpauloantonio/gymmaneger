{% extends "layout.njk" %}

{% block content_index %}


<section class="card table_container" >


<header>
<a class="bt" href="/instructors/create">Novo</a>

<form action="/instructors" method="get">
  <input type="text"
   name="filter"
    placeholder="Nome ou Atendimento " value={{filter}}
    >

  <button type="submit">Filtrar</button>
</form>
</header>




  <table>
    <thead>

      <tr>
          <th>Instructors</th>
          <th>Atendimento</th>
          <th>Alunos</th>
          <th>Ação</th>
      </tr>

    </thead>
  
    <tbody>
    {% for instructor in instructors %}
      <tr>
        <td>
           <span style="background-image: url('/photo-profile.jpg')";>
           </span>  
          {{instructor.name}} 
        </td>
        <td> {{instructor.services}} </td>
        <td style="text-align:center"> {{instructor.total_studente}} </td>
        
        <td> <a href="/instructors/{{instructor.id}} ">Ver</a></td>
      </tr>
    
    {% endfor %}
      
    </tbody>


  </table>

</section>

{% endblock %}