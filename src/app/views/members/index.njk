{% extends "layout.njk" %}

{% block content_index %}


<section class="card table_container" >

<a href="/members/create">Novo</a>
<a href="/members/teatcher">Teatcher</a>

  <table>

    <thead>

      <tr>
          <th>members</th>
          <th>Email</th>
          <th>Peso</th>
          <th>Altura</th>
          <th>Ação</th>
      </tr>

    </thead>
    <tbody>
     
    {% for member in members %}
  
      <tr>
        <td>
           <span style="background-image: url('/photo-profile.jpg')";>
           </span>
          {{member.name}} 
        </td>

        <td> {{member.email}} </td>
        <td> {{member.weight}} kg</td>
        <td> {{member.height}} m </td>
        
        <td> <a href="/members/{{member.id}} " >Ver </a> </td>
      </tr>
    
    {% endfor %}
      
    </tbody>


  </table>

</section>

{% endblock %}