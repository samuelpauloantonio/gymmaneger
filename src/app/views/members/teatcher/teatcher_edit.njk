{% extends 'layout.njk' %}

{% block teatcher %} 
  <section class="teatcher">

  <div class="container">
  
    <div class="info_teatcher">
    <h2 style='margin:16px; color:white ; text-transform:uppercase; font-size:16px' >Teatcher</h2>
      <div class="profile">
        <img src="/photo-profile.jpg" alt="photo-profile">
      </div>

      <div class="about_teatcher">

        <form action="/members/teatcher?_method=PUT" method= 'post'  >
          
          <div class="item">
          <span>Nome</span>
            <input type="text" name="name" placeholder="Digite seu nome" value=" {{teatcher.name}} ">
          </div>

          <div class="item">
          <span>Birth date</span>
            <input type="date" name="birth" value="{{teatcher.birth}} " >
          </div>

          <div class="item">
          <span>Sexo</span>
            <span>Masculino 
              <input type="radio" name="sex"  value ='M' {% if teatcher.birth == 'M' %} checked {% endif %}  >
            </span>
            <span>Femenino
              <input type="radio" name="sex"  value ='F' id="" {% if teatcher.birth == 'F' %} checked {% endif %}  >
            </span>
          </div>

            <div class="item">
           <span>Graduation</span>
            <select name="graduation" id="">
              {% for item in teatcher.services %} 
                <option value="{{item}}"> {{item}} </option>
              {% endfor%}
            </select>
          </div>



          <div class="item">
          
            <button type="submit" id='bt' >Enviar</button>
          </div>

          <input type="hidden" name="id" value='{{teatcher.id}}'>

        </form>
      </div>

    </div><!-- info_teatcher-->
  </div>

</section>

{% endblock %}