{% extends "layout.njk" %}

{% block content_index %}


<section class="card table_container" >



<header class="header_teatcher" >

<a href="/members/teatchers/creat" class='link_a'>Novo</a>

<a style="background:orange !important;" href="/members/student" class='link_a'>Estudante</a>


<form action="/members/teatcher" method="GET" class="header_form" >

  <input type="text"
   name="filter"
    placeholder="Nome ou Atendimento " value={{filter}}
    >

  <button type="submit">Filtrar</button>
</form>
</header>


  <table>

    <thead>

      <tr>
          <th>Teacher</th>
          <th>Área de Actuação</th>
          <th>Tipo de Aula</th>
          <th>Estudantes</th>
          <th>Ação</th>
      </tr>

    </thead>
    <tbody>
     
    {% for teatcher in teatchers %}
  
      <tr>
        <td>
           <span style="background-image: url('/photo-profile.jpg')";>
           </span>
          {{teatcher.name}}
        </td>

        <td>{{teatcher.lesson}}</td>
        <td>{{teatcher.typeofclass}} </td>
        <td>{{teatcher.total_students}} </td>
      
        
        <td> <a href="/members/teatcher/{{teatcher.id}} " >Ver </a> </td>
      </tr>
    
    {% endfor %}
      
    </tbody>


  </table>

</section>

{% endblock %}